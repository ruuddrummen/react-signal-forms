{
  "name": "react-signal-forms",
  "description": "A forms library focusing on performance and modular extensibility.",
  "author": "<r.drummen@hotmail.com>",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruuddrummen/react-signal-forms"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "signals",
    "context",
    "react-context",
    "form",
    "forms",
    "extensions",
    "modular",
    "form-rules",
    "form-validation",
    "validation"
  ],
  "dependencies": {
    "@preact/signals-react": "^1.3.6"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.34",
    "concurrently": "^8.2.2",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0-beta.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./rules": {
      "types": "./dist/rules.d.ts",
      "default": "./dist/rules.js"
    }
  },
  "scripts": {
    "ci": "npm ci && cd ./demo && npm ci",
    "dev": "concurrently --kill-others \"cd ./demo && npm run tsc-watch\" \"cd ./demo && npm run dev\"",
    "demo": "cd ./demo && npm run dev",
    "test": "vitest --typecheck",
    "build": "tsc --noEmit false",
    "build-demo": "cd ./demo && npm run build",
    "tsc": "tsc",
    "preversion": "npm ci && vitest run --typecheck",
    "postversion": "git push && git push --tags"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
